#!/usr/bin/env mksh
#

Color_Off='\e[0m'
Bold="$(tput bold)"
Reset='\e[0m'
BRed='\e[1;31m'
Red='\e[0;31m'
Green='\e[0;32m'
BGreen='\e[1;32m'
Orange='\e[0;33m'
BOrange='\e[1;33m'

# === {{CMD}} "path/to/file.sh"

FILE="$1"; shift
ORIGIN_DIR="$PWD"
SH_SPECS_DIR="$(dirname "$0")/../shoulds"

if [[  ! -f  "$FILE" ]]; then
  mksh_setup RED "=== Spec file {{not found}}: BOLD{{$FILE}}"
  exit 1
fi

for SHOULD_FILE in $(find "$SH_SPECS_DIR" -maxdepth 1 -mindepth 1 -name "*.sh" -print); do
  source "$SHOULD_FILE"
done

# NOTE: We can't use 'specs || report-fail'
#  because of this:
#  http://stackoverflow.com/questions/4072984/set-e-in-a-function
trap 'report-fail $?' EXIT

THIS_DIR="$ORIGIN_DIR"
export IS_SPEC_RUN="YES"
source "$FILE"

trap - EXIT


