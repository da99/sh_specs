#!/usr/bin/env mksh
#
#
THE_ARGS="$@"
THIS_DIR="$(mksh_setup dirname_of_bin "$0")"

if [[ -z "$@" ]]; then
  action="watch"
else
  action=$1
  shift
fi

set -u -e -o pipefail

case $action in
  help|--help)
    mksh_setup print-help $0
    ;;

  *)

    source "$THIS_DIR/../mksh_setup/source/name-to-func-or-exit.sh"
    name-to-func-or-exit "$action"  "$@"
    ;;

esac
